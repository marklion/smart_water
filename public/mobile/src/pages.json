{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^fui-(.*)": "firstui-uni/firstui/fui-$1/fui-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/login",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/device/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/irrigation/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/irrigation/wizard",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/irrigation/valve-map",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/profile/index",
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "智能灌溉管理系统",
		"navigationBarBackgroundColor": "#409eff",
		"backgroundColor": "#f5f7fb"
	},
	"tabBar": {
		"color": "#8a93a6",
		"selectedColor": "#409eff",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"height": "60px",
		"fontSize": "14px",
		"iconWidth": "28px",
		"spacing": "4px",
		"list": [
			{
				"pagePath": "pages/index",
				"text": "首页",
				"iconPath": "static/tabbar/home.png",
				"selectedIconPath": "static/tabbar/home-active.png"
			},
			{
				"pagePath": "pages/device/index",
				"text": "设备",
				"iconPath": "static/tabbar/device.png",
				"selectedIconPath": "static/tabbar/device-active.png"
			},
			{
				"pagePath": "pages/irrigation/index",
				"text": "灌溉",
				"iconPath": "static/tabbar/Irrigation.png",
				"selectedIconPath": "static/tabbar/Irrigation-active.png"
			},
			{
				"pagePath": "pages/profile/index",
				"text": "我的",
				"iconPath": "static/tabbar/mine.png",
				"selectedIconPath": "static/tabbar/mine-active.png"
			}
		]
	}
